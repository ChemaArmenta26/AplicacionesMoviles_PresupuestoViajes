<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/topBarFragment"
        android:name="armenta.jose.proyectofinal_tripsplit.ui.fragments.TopBarFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_top_bar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:text="@string/crearGrupo"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold">

    </TextView>

    <EditText
        android:id="@+id/et_nombreGrupo"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:autofillHints=""
        android:background="@drawable/edit_text_custom"
        android:hint="@string/nombreGrupo"
        android:inputType="textEmailAddress"
        android:padding="12sp"
        android:textColor="@color/black"
        android:textColorHint="#BDBDBD"
        android:textSize="16sp">
    </EditText>

    <EditText
        android:id="@+id/et_desde"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:autofillHints=""
        android:background="@drawable/edit_text_custom"
        android:hint="@string/desde"
        android:inputType="textEmailAddress"
        android:padding="12sp"
        android:textColor="@color/black"
        android:textColorHint="#BDBDBD"
        android:textSize="16sp">
    </EditText>

    <EditText
        android:id="@+id/et_salida"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:autofillHints=""
        android:background="@drawable/edit_text_custom"
        android:hint="@string/Salida"
        android:inputType="textEmailAddress"
        android:padding="12sp"
        android:textColor="@color/black"
        android:textColorHint="#BDBDBD"
        android:textSize="16sp">
    </EditText>

    <EditText
        android:id="@+id/et_llegada"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:autofillHints=""
        android:background="@drawable/edit_text_custom"
        android:hint="@string/llegada"
        android:inputType="textEmailAddress"
        android:padding="12sp"
        android:textColor="@color/black"
        android:textColorHint="#BDBDBD"
        android:textSize="16sp">
    </EditText>

    <EditText
        android:id="@+id/et_numIntegrantes"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:autofillHints=""
        android:background="@drawable/edit_text_custom"
        android:hint="@string/cuantosSon"
        android:inputType="textEmailAddress"
        android:padding="12sp"
        android:textColor="@color/black"
        android:textColorHint="#BDBDBD"
        android:textSize="16sp">
    </EditText>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ingresar"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/boton_redondo"
        android:text="@string/crear"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold">

    </androidx.appcompat.widget.AppCompatButton>

    <FrameLayout
        android:id="@+id/nav_host_fragment_activity_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/light_blue"
        app:menu="@menu/bottom_nav_menu" />
</LinearLayout>