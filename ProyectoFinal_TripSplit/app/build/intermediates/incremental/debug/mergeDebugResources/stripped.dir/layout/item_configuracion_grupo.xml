<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp">

        <ImageView
            android:id="@+id/ivMember"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:background="@mipmap/image_default_user"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tvMemberName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Nombre"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/ivMember"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tvEliminar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar del Grupo"
            android:textColor="#FF5252"
            android:textSize="16sp"
            android:layout_toStartOf="@id/btnRemoveMember"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true" />

        <ImageButton
            android:id="@+id/btnRemoveMember"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/imagen_eliminar_miembro"
            android:padding="8dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_below="@id/ivMember"
            android:layout_marginTop="8dp" />
    </RelativeLayout>
</LinearLayout>